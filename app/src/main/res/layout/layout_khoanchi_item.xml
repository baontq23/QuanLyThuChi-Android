<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="10"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:backgroundTint="#F0EFFF"
        android:outlineAmbientShadowColor="#F0EFFF"
        android:outlineSpotShadowColor="#F0EFFF"
        app:cardCornerRadius="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_up_arrow_red" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_khoanchi_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/source_sans_pro_black"
            android:gravity="center_vertical"
            android:text="Khoản chi"
            android:layout_marginBottom="3dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_khoanchi_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="Date"
            android:textSize="11sp"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_khoanchi_item_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:textColor="@android:color/holo_red_light"
        android:text="-9999999999đ" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_khoanchi_item_option"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:drawableLeft="@drawable/ic_arrow_right"
        android:drawableTint="#6D5FFD"
        android:outlineAmbientShadowColor="#F0EFFF"
        android:outlineSpotShadowColor="#F0EFFF"
        app:cornerRadius="50dp" />
</LinearLayout>