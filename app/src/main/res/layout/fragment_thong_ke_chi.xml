        app:layout_constraintTop_toBottomOf="@+id/elv_chi" />

    <TextView
        android:id="@+id/tv_total_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="5000ff0fsdfsdfsd0"
